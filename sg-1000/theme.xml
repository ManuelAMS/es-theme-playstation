<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
		<textlist name="gamelist">
         <selectorColor>0000ff50</selectorColor>
         <selectedColor>00ffff</selectedColor>
      </textlist>
	</view>

	<view name="system">
                <image name="systemsnap" extra="true">
                   <origin>0 .5</origin>
                   <pos>0.4 0.5</pos>
                   <maxSize>0.55 0.67</maxSize>
                   <zIndex>11</zIndex>
                   <path>./_inc/systemsnap.png</path>
                </image>
                 <image name="systemlogo" extra="true">
                   <origin>.5 .5</origin>
                   <pos>.7 0.75</pos>
                   <maxSize>0.35 0.35</maxSize>
                   <zIndex>12</zIndex>
                   <path>./_inc/system.svg</path>
                </image>
	</view>
	
	<view name="basic">
      <image name="console" extra="true">
         <origin>.5 .5</origin>
         <pos>0.70 0.55</pos>
         <maxSize>0.35 0.35</maxSize>
         <path>./_inc/systemsnap.png</path>
          <zIndex>50</zIndex>
         </image>
    </view>
</theme>
