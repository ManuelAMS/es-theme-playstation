<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
		<textlist name="gamelist">
         <selectorColor>ff000050</selectorColor>
         <selectedColor>ffa0a0</selectedColor>
      </textlist>
	</view>
		
	<view name="system">
                <image name="systemsnap" extra="true">
                   <origin>0 .5</origin>
                   <pos>0.4 0.5</pos>
                   <maxSize>0.55 0.67</maxSize>
                   <zIndex>11</zIndex>
                   <path>./_inc/systemsnap.png</path>
                </image>
                 <image name="systemlogo" extra="true">
                   <origin>.5 .5</origin>
                   <pos>.7 0.75</pos>
                   <maxSize>0.35 0.35</maxSize>
                   <zIndex>12</zIndex>
                   <path>./_inc/system.svg</path>
                </image>
	</view>
	
	<view name="basic, detailed, video">
	    <image name="config" extra="true">
         <origin>0 0.5</origin>
         <pos>.03 0.10</pos>
         <maxSize>0.15 0.15</maxSize>
        <path>./_inc/config.png</path>
        <zIndex>45</zIndex>
      </image>
    </view>
	
	<view name="basic">
      <image name="console" extra="true">
         <origin>.5 .5</origin>
         <pos>0.70 0.55</pos>
         <maxSize>0.35 0.35</maxSize>
         <path>./_inc/systemsnap.png</path>
          <zIndex>50</zIndex>
         </image>
    </view>
</theme>
